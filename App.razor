<CascadingAuthenticationState>
    <Microsoft.AspNetCore.Components.Routing.Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Mazinger.Shared.MainLayout)" />
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>404</PageTitle>
            <LayoutView Layout="@typeof(Mazinger.Shared.MainLayout)">
                <p role="alert">抱歉, 您访问的页面不存在</p>
            </LayoutView>
        </NotFound>
    </Microsoft.AspNetCore.Components.Routing.Router>
</CascadingAuthenticationState>
